{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "start-cmd",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {},
            "cwd": "${workspaceFolder}/bin",
            "dlvLoadConfig": {
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 64,
                "maxArrayValues": 64,
                "maxStructFields": -1
            },
            "dlvFlags": ["--only-same-user=false"]
        }
    ]
}